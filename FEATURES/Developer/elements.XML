        <CommandUIDefinition Location="Ribbon.List.Groups._children">
            <Group Id="Ribbon.List.AppDev"
                Sequence="0"
                Command="EnableCustomGroup"
                Description=""
                Title="$Resources:AppDevelopmentCore, cui_GrpAppDev;"
                Image32by32Popup="/_layouts/15/$Resources:core,Language;/images/formatmap32x32.png?rev=23" Image32by32PopupTop="-511" Image32by32PopupLeft="-103"
                Template="Ribbon.Templates.Flexible2">
                <Controls Id="Ribbon.List.AppDev.Controls">
                    <Button
                        Id="Ribbon.List.AppDev.AppDeploy"
                        Sequence="1"
                        Command="Ribbon.List.AppDev.Command.AppDeploy"
                        Image16by16="/_layouts/15/$Resources:core,Language;/images/formatmap16x16.png?rev=23" Image16by16Top="-217" Image16by16Left="-91"
                        Image32by32="/_layouts/15/$Resources:core,Language;/images/formatmap32x32.png?rev=23" Image32by32Top="-103" Image32by32Left="-375"
                        LabelText="$Resources:AppDevelopmentCore, cui_ButDeployApp;"
                        ToolTipTitle="$Resources:AppDevelopmentCore,cui_ButDeployApp;"
