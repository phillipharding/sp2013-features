                DisplaceOnUpgrade="TRUE"
                ReadOnly="TRUE"
                Hidden="FALSE"
                Sealed="FALSE"
                AllowDeletion="FALSE" />

        </Fields>
        <Views>
            <View 
                BaseViewID="1"
                Type="HTML"
                WebPartZoneID="Main"
                Hidden="TRUE"
                DisplayName="$Resources:spscore,CategoriesList_CategoriesListView;"
                DefaultView="FALSE"
                SetupPath="pages\viewpage.aspx"
                ReadOnly="TRUE" >
                <XslLink Default="TRUE">main.xsl</XslLink>
                <JSLink>clienttemplates.js</JSLink>
                <ViewFields>
                    <FieldRef Name="LinkTitle" />
                    <FieldRef Name="CategoryDescription" />
                    <FieldRef Name="TopicCount" />
                    <FieldRef Name="ReplyCount" />
                    <FieldRef Name="LastPostBy" />
                    <FieldRef Name="LastPostDate" />
                    <FieldRef Name="CategoryImage" />
                </ViewFields>
                <Query>
                    <OrderBy>
                        <FieldRef Name="Title" />
                    </OrderBy>
                </Query>
            </View>
            <View 
                BaseViewID="2"
                Type="HTML"
                WebPartZoneID="Main"
                DisplayName="$Resources:spscore,CategoriesList_AdminView;"
                DefaultView="FALSE"
                SetupPath="pages\viewpage.aspx"
                ImageUrl="/_layouts/15/images/generic.png?rev=23"
                Url="AdminView.aspx">
                <RowLimit Paged="TRUE">20</RowLimit>
                <XslLink Default="TRUE">main.xsl</XslLink>
                <JSLink>clienttemplates.js</JSLink>
                <ViewFields>
                    <FieldRef Name="LinkTitle" />
                    <FieldRef Name="CategoryDescription" />
                    <FieldRef Name="TopicCount" />
                    <FieldRef Name="ReplyCount" />
                    <FieldRef Name="LastPostBy" />
                    <FieldRef Name="LastPostDate" />
                    <FieldRef Name="CategoryImage" />
                </ViewFields>
                <Query>
                    <OrderBy>
                        <FieldRef Name="Title" />
                    </OrderBy>
                </Query>
            </View>
